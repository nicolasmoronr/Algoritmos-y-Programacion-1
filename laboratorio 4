#include <iostream>
#include <string.h>
#include <conio.h>
#include "stdafx.h"
using namespace std ;

int contarCantDeVocales (char cad[])
{
	int i, c=0;
	for (i=0;i<strlen(cad);i++;
	{
		if ((cad[i]=='a')||(cad[i]=='e')||(cad[i]=='i')||(cad[i]=='o')||(cad[i]=='u')||
			(cad[i]=='A')||(cad[i]=='E')||(cad[i]=='I')||(cad[i]=='O')||(cad[i]=='U')
		{
			c++;
		}
	}
	return (c)
}
void reemplazarVocales(char cad[])
{
	int i, c=0;
	for (i=0;i<strlen(cad);i++;
	{
		if ((cad[i]=='a')||(cad[i]=='e')||(cad[i]=='i')||(cad[i]=='o')||(cad[i]=='u')||
			(cad[i]=='A')||(cad[i]=='E')||(cad[i]=='I')||(cad[i]=='O')||(cad[i]=='U')){
			cad[i]=='*';
		
			c++;
		}
	}
}

